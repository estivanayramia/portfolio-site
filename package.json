{
    "name": "portfolio-site",
    "version": "2.0.0",
    "description": "Estivan Ayramia's portfolio site with PWA support",
    "scripts": {
        "build:facts": "node scripts/generate-site-facts.js",
        "build:css": "npx tailwindcss -i ./assets/css/input.css -o ./assets/css/style.css --minify",
        "build:js": "esbuild assets/js/site.js --minify --outfile=assets/js/site.min.js",
        "build:lazy": "esbuild assets/js/lazy-loader.js --minify --outfile=assets/js/lazy-loader.min.js",
        "upload:facts": "cd worker && wrangler kv key put --remote --binding SAVONIE_KV site-facts:v1 --path ../assets/data/site-facts.json",
        "build": "npm run build:facts && npm run build:css && npm run build:js && npm run build:lazy && npm run upload:facts",
        "watch": "npx tailwindcss -i ./assets/css/input.css -o ./assets/css/style.css --watch",
        "start": "node scripts/local-serve.js",
        "ship": "npm run build && git add -A && git commit -m \"auto-deploy: build\" || echo 'No changes to commit' && git push",
        "dev:worker": "cd worker && npx wrangler dev",
        "deploy:worker": "cd worker && npx wrangler deploy",
        "test:facts": "node scripts/test-chat-grounding.js",
        "check:banned": "node scripts/check-banned-patterns.mjs",
        "audit:links": "powershell -NoProfile -ExecutionPolicy Bypass -File tools/link-check.ps1",
        "audit:head": "node scripts/audit-head.js",
        "audit:seo": "node tools/seo-check.mjs",
        "audit:lighthouse": "node scripts/lighthouse-audit.mjs https://www.estivanayramia.com",
        "audit:psi": "node scripts/psi-audit.mjs https://www.estivanayramia.com",
        "check:csp": "node scripts/check-csp.cjs",
        "test:contact": "MOCK_FORMSPREE=1 node scripts/test-contact-form-playwright.cjs",
        "test:contact:live": "node scripts/test-contact-form-playwright.cjs"
    },
    "keywords": [
        "portfolio",
        "pwa",
        "progressive-web-app"
    ],
    "author": "Estivan Ayramia",
    "license": "MIT",
    "devDependencies": {
        "autoprefixer": "^10.4.22",
        "esbuild": "^0.27.2",
        "lightningcss": "^1.30.2",
        "playwright": "^1.57.0",
        "postcss": "^8.5.6",
        "serve": "^14.2.5",
        "tailwindcss": "^3.4.17",
        "terser": "^5.44.1"
    },
    "main": "postcss.config.js",
    "directories": {
        "doc": "docs"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/estivanayramia/portfolio-site.git"
    },
    "type": "commonjs",
    "bugs": {
        "url": "https://github.com/estivanayramia/portfolio-site/issues"
    },
    "homepage": "https://github.com/estivanayramia/portfolio-site#readme"
}
